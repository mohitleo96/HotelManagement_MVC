@model IEnumerable<HotelManagement.Models.INVENTORY>

@{
    ViewBag.Title = "Index";
}
<font style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; color:aliceblue;>
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" border="2">
        <tr style="background-color:cornsilk">
            <th>
                @Html.DisplayNameFor(model => model.Invertory_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MANAGER.Employee_Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Invertory_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MANAGER.Employee_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Invertory_ID }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.Invertory_ID })
                </td>
            </tr>
        }

    </table>
